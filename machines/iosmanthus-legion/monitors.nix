{ config, ... }:
let
  fingerprint =
    "";
in
{
  machine = {
    displayPortFingerprint = fingerprint;
    displayPort = "eDP-1";
  };
  services.autorandr = {
    enable = true;
    profiles = {
      default = {
        fingerprint = {
          "${config.machine.displayPort}" = fingerprint;
        };
        config = {
          "${config.machine.displayPort}" = {
            enable = true;
            mode = "3840x2160";
          };
        };
      };
    };
  };
}
