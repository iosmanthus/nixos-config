{ config, ... }:
let
  name = "eDP-1";
  fingerprint =
    "";
in
{
  machine = {
    builtinDisplayPort = {
      inherit name fingerprint;
    };
  };
  services.autorandr = {
    enable = true;
    profiles = {
      default = {
        fingerprint = {
          "${name}" = fingerprint;
        };
        config = {
          "${name}" = {
            enable = true;
            mode = "3840x2160";
          };
        };
      };
    };
  };
}
