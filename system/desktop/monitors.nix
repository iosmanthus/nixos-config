{ config
, pkgs
, ...
}:
let
  builtinDisplayPort = config.machine.builtinDisplayPort.name;
  builtinDisplayPortFingerprint = config.machine.builtinDisplayPort.fingerprint;
  inherit (config.machine) displayPorts;
  restartPolybar = ''
    ${pkgs.systemd}/bin/systemctl restart --user polybar.service
  '';
  hooks = {
    postswitch = {
      inherit restartPolybar;
    };
  };
  mk4k = p: {
    "${builtinDisplayPort}".enable = false;
    "${p}" = {
      enable = true;
      primary = true;
      mode = "3840x2160";
      rate = "60.00";
    };
  };
  mk2k = p: {
    "${builtinDisplayPort}".enable = false;
    "${p}" = {
      enable = true;
      primary = true;
      mode = "2560x1440";
      rate = "60.00";
    };
  };
  mkProfile =
    { name
    , fingerprint
    , mkConfig
    , displayPorts
    }: builtins.foldl'
      (acc: p: acc // {
        "${name}-${p}" = {
          fingerprint = {
            "${builtinDisplayPort}" = builtinDisplayPortFingerprint;
            "${p}" = fingerprint;
          };
          config = mkConfig p;
          inherit hooks;
        };
      })
      { }
      displayPorts;
in
{
  services.autorandr = {
    enable = true;
    inherit hooks;
    profiles = mkProfile
      {
        name = "home";
        fingerprint = "";
        inherit displayPorts;
        mkConfig = mk4k;
      }
    // mkProfile
      {
        name = "office";
        fingerprint = "";
        inherit displayPorts;
        mkConfig = mk4k;
      }
    // mkProfile
      {
        name = "hometown-2k";
        fingerprint = "";
        inherit displayPorts;
        mkConfig = mk2k;
      }
    // mkProfile
      {
        name = "hometown";
        fingerprint = "";
        inherit displayPorts;
        mkConfig = mk4k;
      };
  };
}
